@model Test.Models.Class1

@{
    ViewBag.Title = "Details";
}
<script src="~/ViewJs/Default1/Details.js"></script>


<link rel="stylesheet" href="~/css/jquery-ui.css">
<!-- jQuery UI Theme -->
<link rel="stylesheet" href="~/css/jquery.ui.theme.css">
@*<link rel="stylesheet" href="~/css/style.css">*@
<link rel="stylesheet" href="~/css/chosen.css">


<script src="~/js/jquery.ui.widget.min.js"></script>
<script src="~/js/jquery.ui.mouse.min.js"></script>
<script src="~/js/jquery.ui.slider.min.js"></script>
<script src="~/js/jquery.ui.spinner.min.js"></script>
<script src="~/js/chosen.jquery.min.js"></script>

<link rel="stylesheet" href="~/css/datepicker.css">
<script src="~/js/bootstrap-datepicker.min.js"></script>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-body box-body-nopadding">
                    @using (Html.BeginForm("Details", "AAA", FormMethod.Post, new { @id = "validateForm", @class = "form-horizontal form-bordered form-validate" })) {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.string1)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.string1)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.string2)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.string2)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.int1)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.int1)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.enum1)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.enum1)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.date)
                            </div>
                            <div class="controls">
                                <input type="text" name="textfield" id="textfield" class="input-xlarge" data-rule-required="true" data-rule-minlength="2" placeholder="Price">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.money)
                            </div>
                            <div class="controls">
                                <div class="input-append input-prepend">
                                    <span class="add-on">￥</span>
                                    @Html.MyTextBoxFor(model => model.money)
                                    <span class="add-on">.00</span>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <label for="slider" class="control-label">Basic slider (step: 25)</label>
                            <div class="controls">
                                <div class="slider" data-step="25" data-min="0" data-max="250">
                                    <div class="amount"></div>
                                    <div class="slide"></div>
                                </div>
                            </div>
                        </div>
                        <input type="submit" class="button button-basic-blue" value="Submit">
                    }
                </div>
            </div>
        </div>
    </div>
</div>
