@model IEnumerable<Test.Models.Class1>

@{
    ViewBag.Title = "Index";
}


@*Grid控件使用的Js和Css*@
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/TableTools.min.js"></script>
<link rel="stylesheet" href="~/css/TableTools.css">

<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-head">
                <span>TableTools</span>
            </div>
            <div class="box-body box-body-nopadding">
                <div class="dataTables_wrapper" role="grid">
                    <table class="table table-nomargin table-bordered dataTable table-striped table-hover dataTable-tools">
                        <thead>
                            <tr role="row">
                                <th>
                                    @Html.DisplayNameFor(model => model.string2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.int1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.money)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.booltry)
                                </th>
                                <th style="width: 80px;"></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.string2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.int1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.money)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.booltry)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="button button-basic dropdown-toggle" data-toggle="dropdown">
                                            Action<span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
