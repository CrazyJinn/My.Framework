@model Test.Models.Class1

@{
    ViewBag.Title = "Details";
}

<link rel="stylesheet" href="~/css/jquery-ui.css">
<!-- jQuery UI Theme -->
<link rel="stylesheet" href="~/css/jquery.ui.theme.css">
@*<link rel="stylesheet" href="~/css/style.css">*@


<script src="~/js/jquery.ui.widget.min.js"></script>
<script src="~/js/jquery.ui.mouse.min.js"></script>
<script src="~/js/jquery.ui.slider.min.js"></script>
<script src="~/js/jquery.ui.spinner.min.js"></script>

<script src="~/ViewJs/Default1/Details.js"></script>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-body box-body-nopadding">
                    @using (Html.BeginForm("Details", "Default1", FormMethod.Post, new { @id = "validateForm", @class = "form-horizontal form-bordered form-validate" })) {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.string1)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.string1)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.string2)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.string2)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.int1)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.int1)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.enum1)
                            </div>
                            <div class="controls">
                                @Html.MyDropDownListFor(model => model.enum1)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.date)
                            </div>
                            <div class="controls">
                                @Html.MyTextBoxFor(model => model.date)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                @Html.LabelFor(model => model.money)
                            </div>
                            <div class="controls">
                                <div class="input-append input-prepend">
                                    <span class="add-on">￥</span>
                                    @Html.MyTextBoxFor(model => model.money)
                                    <span class="add-on">.00</span>
                                </div>
                            </div>
                        </div>
                        

                        <input type="submit" class="button button-basic-blue" value="Submit">
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

